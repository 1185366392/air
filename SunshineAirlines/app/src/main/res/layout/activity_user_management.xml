<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".administratorMenu">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="vertical"
            android:id="@+id/linearLayout">
        <ImageView
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:src="@drawable/logo"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#3468a1"
        />
    </LinearLayout>
    <TextView
            android:text="User Management"
            android:layout_width="339dp"
            android:layout_height="38dp" android:id="@+id/textView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:textColor="#333"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textSize="20dp" android:gravity="center_vertical"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="60dp"
            android:id="@+id/linearLayout2">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
            <TextView
                    android:text="Role:"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView25" android:layout_weight="1"
                    android:gravity="center" android:textSize="20dp" android:textColor="#333"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="center">
                <Spinner
                        android:layout_width="144dp"
                        android:layout_height="wrap_content" android:id="@+id/spinner2" android:spinnerMode="dropdown"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
            <TextView
                    android:text="Name:"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView27" android:layout_weight="1"
                    android:textColor="#333" android:textSize="20dp" android:gravity="center"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="center">

                <EditText
                        android:layout_width="150dp"
                        android:layout_height="25dp"
                        android:background="@drawable/textbox"
                />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="409dp"
            android:layout_height="353dp" tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" android:layout_marginTop="28dp"
            android:gravity="center" tools:ignore="MissingConstraints">
        <Button
                android:text="search"
                android:layout_width="240dp"
                android:layout_height="40dp" android:id="@+id/button7" android:layout_marginTop="20dp"
                android:background="@drawable/buttonblue"/>
        <Button
                android:text="Add a new user"
                android:layout_width="240dp"
                android:layout_height="40dp" android:id="@+id/addBtn" android:layout_marginTop="20dp"
                android:background="@drawable/buttonblue"/>
        <Button
                android:text="back"
                android:layout_width="240dp"
                android:layout_height="40dp" android:id="@+id/umBack" android:layout_marginTop="20dp"
                android:background="@drawable/buttonyellow"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>