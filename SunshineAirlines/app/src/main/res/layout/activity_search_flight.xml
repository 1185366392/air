<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Administrator">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="vertical"
            android:id="@+id/linearLayout">
        <ImageView
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:src="@drawable/logo"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#3468a1"
        />
    </LinearLayout>
    <TextView
            android:text="Search Flights"
            android:layout_width="155dp"
            android:layout_height="44dp" android:id="@+id/textView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:textColor="#333"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textSize="20dp" android:gravity="center"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="410dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteX="1dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="8dp" android:gravity="center"
            tools:ignore="MissingConstraints" android:id="@+id/linearLayout3">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="305dp"
                android:layout_height="39dp">
            <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <RadioButton
                        android:text="One Way"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content" android:id="@+id/radioButton"/>
                <RadioButton
                        android:text="Round Ways"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/radioButton2"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="305dp"
                android:layout_height="39dp">
            <TextView
                    android:text="From City:"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView1224" android:layout_weight="1"
                    android:gravity="center_vertical" android:textSize="18dp" android:textColor="#333"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="center">
                <Spinner
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" android:id="@+id/spinner"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="305dp"
                android:layout_height="39dp">
            <TextView
                    android:text="To City:"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView1334" android:layout_weight="1"
                    android:gravity="center_vertical" android:textSize="18dp" android:textColor="#333"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="center">
                <Spinner
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" android:id="@+id/spinner3"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="305dp"
                android:layout_height="39dp">
            <TextView
                    android:text="Departure Date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView144" android:layout_weight="1"
                    android:gravity="center_vertical" android:textSize="18dp" android:textColor="#333"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="center">
                <EditText android:layout_width="100dp" android:layout_height="30dp"
                          android:background="@drawable/textbox"/>
                <ImageView
                        android:layout_width="25dp"
                        android:layout_height="40dp" app:srcCompat="@drawable/calendar"
                        android:id="@+id/imageView"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="305dp"
                android:layout_height="39dp">
            <TextView
                    android:text="Return Date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView154" android:layout_weight="1"
                    android:gravity="center_vertical" android:textSize="18dp" android:textColor="#333"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="center">
                <EditText android:layout_width="100dp" android:layout_height="30dp"
                          android:background="@drawable/textbox"/>
                <ImageView
                        android:layout_width="25dp"
                        android:layout_height="40dp" app:srcCompat="@drawable/calendar"
                        android:id="@+id/imageView2"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="305dp"
                android:layout_height="39dp">
            <TextView
                    android:text="Cabin Type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView164" android:layout_weight="1"
                    android:gravity="center_vertical" android:textSize="18dp" android:textColor="#333"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="center">
                <Spinner
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/spinner5"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="305dp"
                android:layout_height="39dp">
            <TextView
                    android:text="Flight Type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView174" android:layout_weight="1"
                    android:gravity="center_vertical" android:textSize="18dp" android:textColor="#333"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="center">
                <Spinner
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/spinner4"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
            android:text="Search"
            android:layout_width="300dp"
            android:layout_height="50dp" android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            android:layout_marginTop="70dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="55dp" android:layout_marginStart="55dp" android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp" app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/buttonblue"/>
    <Button
            android:text="Button"
            android:layout_width="300dp"
            android:layout_height="50dp" android:id="@+id/button6"
            app:layout_constraintTop_toBottomOf="@+id/button"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="55dp" android:layout_marginStart="55dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="55dp"
            android:layout_marginEnd="55dp" android:background="@drawable/buttonyellow"/>
</androidx.constraintlayout.widget.ConstraintLayout>