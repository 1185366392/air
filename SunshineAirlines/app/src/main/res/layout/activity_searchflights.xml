<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".searchflights">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="vertical"
            android:id="@+id/linearLayout">
        <ImageView
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:src="@drawable/logo"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#3468a1"
        />
    </LinearLayout>
    <TextView
            android:text="Search Flights"
            android:layout_width="177dp"
            android:layout_height="36dp" android:id="@+id/textView"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:textColor="#333"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:textSize="25dp"/>
    <ScrollView
            android:layout_width="409dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteX="2dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" tools:ignore="MissingConstraints">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:gravity="center"
        >
            <TextView
                    android:text="Total 2 flights"
                    android:layout_width="141dp"
                    android:layout_height="39dp" android:id="@+id/textView2" android:textSize="20dp"
                    android:textStyle="bold" android:textColor="#4694cd"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="330dp"
                    android:layout_height="235dp"
                    android:background="@drawable/backsolid"
                    android:gravity="center"
            >
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="322dp"
                        android:layout_height="32dp">
                    <RadioButton
                            android:text="Select"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/radio1"
                            android:textColor="#e3a35b" android:textStyle="bold" android:textSize="18dp"
                            android:background="#cde0ef"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="322dp"
                        android:layout_height="32dp">
                    <TextView
                            android:text="NH1980(90%)"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/textView3" android:textColor="#333"
                            android:textStyle="bold" android:textSize="18dp" android:gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="322dp"
                        android:layout_height="32dp"
                        android:background="#f2f2f2"
                >
                    <TextView
                            android:text="Cabin Type:First"
                            android:layout_width="191dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView44" android:textColor="#333"/>
                    <TextView
                            android:text="Price:$1500.00"
                            android:layout_width="138dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView55" android:textColor="#333"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="322dp"
                        android:layout_height="32dp"
                >
                    <TextView
                            android:text="Beijing/PEK"
                            android:layout_width="191dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView1" android:textColor="#333"/>
                    <TextView
                            android:text="2018-06-25 08:05"
                            android:layout_width="138dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView22" android:textColor="#333"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="322dp"
                        android:layout_height="32dp"
                        android:background="#f2f2f2"
                >
                    <TextView
                            android:text="Rome/CIA"
                            android:layout_width="191dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView33" android:textColor="#333"/>
                    <TextView
                            android:text="2018-06-25 18:05"
                            android:layout_width="138dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView4" android:textColor="#333"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="322dp"
                        android:layout_height="32dp"
                >
                    <TextView
                            android:text="Non-stop"
                            android:layout_width="191dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView5" android:textColor="#333"/>
                    <TextView
                            android:text="Total Time:10h 0m"
                            android:layout_width="138dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView6" android:textColor="#333"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="322dp"
                        android:layout_height="32dp"
                        android:background="#f2f2f2"
                >
                    <TextView
                            android:text="12avaliable tickets"
                            android:layout_width="191dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView7" android:textColor="#333"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="330dp"
                    android:layout_height="235dp"
                    android:background="@drawable/backsolid"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
            >
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="322dp"
                        android:layout_height="32dp">
                    <RadioButton
                            android:text="Select"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/radio11"
                            android:textColor="#e3a35b" android:textStyle="bold" android:textSize="18dp"
                            android:background="#cde0ef"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="322dp"
                        android:layout_height="32dp">
                    <TextView
                            android:text="NH1980(90%)"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/textView333" android:textColor="#333"
                            android:textStyle="bold" android:textSize="18dp" android:gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="322dp"
                        android:layout_height="32dp"
                        android:background="#f2f2f2"
                >
                    <TextView
                            android:text="Cabin Type:First"
                            android:layout_width="191dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView444" android:textColor="#333"/>
                    <TextView
                            android:text="Price:$1500.00"
                            android:layout_width="138dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView555" android:textColor="#333"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="322dp"
                        android:layout_height="32dp"
                >
                    <TextView
                            android:text="Beijing/PEK"
                            android:layout_width="191dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView12" android:textColor="#333"/>
                    <TextView
                            android:text="2018-06-25 08:05"
                            android:layout_width="138dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView222" android:textColor="#333"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="322dp"
                        android:layout_height="32dp"
                        android:background="#f2f2f2"
                >
                    <TextView
                            android:text="Rome/CIA"
                            android:layout_width="191dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView334" android:textColor="#333"/>
                    <TextView
                            android:text="2018-06-25 18:05"
                            android:layout_width="138dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView45" android:textColor="#333"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="322dp"
                        android:layout_height="32dp"
                >
                    <TextView
                            android:text="Non-stop"
                            android:layout_width="191dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView56" android:textColor="#333"/>
                    <TextView
                            android:text="Total Time:10h 0m"
                            android:layout_width="138dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView61" android:textColor="#333"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="322dp"
                        android:layout_height="32dp"
                        android:background="#f2f2f2"
                >
                    <TextView
                            android:text="12avaliable tickets"
                            android:layout_width="191dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView72" android:textColor="#333"/>
                </LinearLayout>
            </LinearLayout>
            <Button android:layout_width="200dp"
                    android:layout_marginTop="10dp"
                    android:text="Back"
                    android:id="@+id/back1"
                    android:background="@drawable/buttonyellow"
                    android:layout_height="50dp"/>
            <TextView android:layout_width="100dp" android:layout_height="200dp"/>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>