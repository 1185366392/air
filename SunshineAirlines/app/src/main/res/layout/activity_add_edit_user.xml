<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".administratorMenu">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="vertical"
            android:id="@+id/linearLayout">
        <ImageView
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:src="@drawable/logo"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#3468a1"
        />
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="409dp"
            android:layout_height="687dp" tools:layout_editor_absoluteY="43dp" tools:layout_editor_absoluteX="1dp"
            tools:ignore="MissingConstraints">
        <TextView
                android:text="ADD/Edit User"
                android:layout_width="match_parent"
                android:layout_height="35dp" android:id="@+id/textView14" android:gravity="center"
                android:textSize="20dp" android:textStyle="bold" android:textColor="#333"
                android:layout_marginTop="40dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="141dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="273dp"
                    android:layout_height="match_parent" android:gravity="center">
                <TextView
                        android:text="Email:"
                        android:layout_width="211dp"
                        android:layout_height="30dp" android:id="@+id/textView15" android:textStyle="bold"
                        android:textSize="14dp" android:gravity="center_vertical"/>
                <EditText android:layout_width="213dp" android:layout_height="30dp"
                          android:background="@drawable/textbox" android:hint="2.9@qq.com"
                          android:id="@+id/emailbox"
                          android:textColorHint="#333"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:gravity="center">
                <ImageView
                        android:layout_width="113dp"
                        android:layout_height="80dp" app:srcCompat="@drawable/male"
                        android:id="@+id/imageView5"/>
                <Button
                        android:text="Select Photo"
                        android:layout_width="match_parent"
                        android:layout_height="25dp" android:id="@+id/button10"
                        android:background="@drawable/buttonyellow" android:layout_marginTop="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp" android:gravity="center_vertical">
            <TextView
                    android:text="Role:"
                    android:layout_width="207dp"
                    android:layout_height="wrap_content" android:id="@+id/textView18" android:layout_weight="1"
                    android:textStyle="bold" android:gravity="center"/>
            <RadioGroup
                    android:layout_width="match_parent" android:orientation="horizontal"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="center">
                <RadioButton
                        android:text="Office User"
                        android:layout_width="130dp"
                        android:layout_height="20dp" android:id="@+id/reUser"/>
                <RadioButton
                        android:text="Administrator"
                        android:layout_width="130dp"
                        android:layout_height="20dp" android:id="@+id/reAdmin"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp" android:gravity="center_vertical">
            <TextView
                    android:text="Gender:"
                    android:layout_width="207dp"
                    android:layout_height="wrap_content" android:id="@+id/textView118" android:layout_weight="1"
                    android:textStyle="bold" android:gravity="center"/>
            <RadioGroup
                    android:layout_width="match_parent" android:orientation="horizontal"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="center">
                <RadioButton
                        android:text="Male"
                        android:layout_width="130dp"
                        android:layout_height="20dp" android:id="@+id/reMale"/>
                <RadioButton
                        android:text="Female"
                        android:layout_width="130dp"
                        android:layout_height="20dp" android:id="@+id/reFemale"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                <TextView
                        android:text="First Name:"
                        android:layout_height="match_parent" android:id="@+id/textView19" android:layout_weight="1"
                        android:gravity="center_vertical" android:paddingLeft="25dp" android:layout_width="60dp"/>
                <TextView
                        android:text="Last Name:"
                        android:layout_width="60dp"
                        android:layout_height="match_parent" android:id="@+id/textView20" android:layout_weight="1"
                        android:gravity="center_vertical" android:paddingLeft="25dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center">
                <EditText android:layout_width="154dp" android:layout_height="20dp"
                          android:id="@+id/fname"
                          android:background="@drawable/textbox" android:layout_marginRight="40dp" android:hint="2.9"
                          android:textColorHint="#333"/>
                <EditText android:layout_width="153dp" android:layout_height="20dp"
                          android:id="@+id/lname"
                          android:background="@drawable/textbox" android:hint="2.9" android:textColorHint="#333"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp" android:gravity="center">
            <TextView
                    android:text="Gender:"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" android:id="@+id/textView26" android:layout_weight="1"
                    android:textStyle="bold" android:gravity="center"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="100dp"
                    android:layout_height="30dp" android:layout_weight="1" android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp" android:background="@drawable/textbox">
                <EditText android:layout_width="145dp" android:layout_height="30dp"
                          android:background="#00FFFFFF"
                          android:hint="2020/11/30" android:textColorHint="#333"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/calendar"
                        android:id="@+id/imageView6" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp" android:gravity="center">
            <TextView
                    android:text="Telephone:"
                    android:layout_width="50dp"
                    android:layout_height="match_parent" android:id="@+id/textView28" android:layout_weight="1"
                    android:gravity="center" android:textStyle="bold"/>
            <EditText android:layout_width="200dp" android:layout_height="30dp" android:layout_marginRight="60dp"
                      android:background="@drawable/textbox" android:hint="111111111111111"
                      android:id="@+id/phone"
                      android:textColorHint="#333"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp" android:gravity="center">
            <TextView
                    android:text="Address:"
                    android:layout_width="50dp"
                    android:layout_height="match_parent" android:id="@+id/textView238" android:layout_weight="1"
                    android:gravity="center" android:textStyle="bold"/>
            <EditText android:layout_width="200dp" android:layout_height="24dp" android:layout_marginRight="60dp"
                      android:background="@drawable/textbox"
                      android:id="@+id/address"
                      android:hint="58 South Maoming Road Huaihua "
                      android:textColorHint="#333"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="66dp" android:gravity="center">
            <Button
                    android:text="Submit"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" android:id="@+id/submitbtn" android:layout_weight="1"
                    android:layout_margin="10dp" android:background="@drawable/buttonblue"/>
            <Button
                    android:text="Cancel"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" android:id="@+id/cancelBtn1" android:layout_weight="1"
                    android:layout_margin="10dp" android:background="@drawable/buttonred"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>