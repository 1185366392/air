<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".searchflights">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="vertical"
            android:id="@+id/linearLayout">
        <ImageView
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:src="@drawable/logo"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#3468a1"
        />
    </LinearLayout>
    <TextView
            android:text="Flight Schedule Management Result"
            android:layout_width="wrap_content"
            android:layout_height="36dp" android:id="@+id/textView"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:textColor="#333"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:textSize="20dp"/>
    <ScrollView
            android:layout_width="409dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteX="2dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" tools:ignore="MissingConstraints">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:gravity="center"
        >
            <TextView
                    android:text="Total Schedule: 1"
                    android:layout_width="141dp"
                    android:layout_height="39dp" android:id="@+id/textView2" android:textSize="14dp"
                    android:textStyle="bold" android:textColor="#333"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="330dp"
                    android:layout_height="200dp"
                    android:background="@drawable/backsolid"
                    android:gravity="center"
            >
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="322dp"
                        android:layout_height="32dp">
                    <TextView
                            android:text="Flight Number:101"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/textView8"
                            android:textColor="#e39944"
                            android:textSize="18dp" android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:background="#8fc1f2"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="322dp"
                        android:layout_height="32dp">
                    <TextView
                            android:text="Date: 2018-06-25"
                            android:layout_width="193dp"
                            android:layout_height="match_parent" android:id="@+id/textView3" android:textColor="#333"
                            android:textSize="18dp" android:gravity="center_vertical"/>
                    <TextView
                            android:text="Time:08:05"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" android:id="@+id/textView322" android:textColor="#333"
                            android:textSize="18dp" android:gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="322dp"
                        android:layout_height="32dp"
                        android:background="#f2f2f2"
                >
                    <TextView
                            android:text="From:Beijing/PEK"
                            android:layout_width="191dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView44" android:textColor="#333"/>
                    <TextView
                            android:text="To:Roma/CIA"
                            android:layout_width="138dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView55" android:textColor="#333"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="322dp"
                        android:layout_height="32dp"
                >
                    <TextView
                            android:text="Economy Price:400"
                            android:layout_width="191dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView1" android:textColor="#333"/>
                    <TextView
                            android:text="Gate:F30"
                            android:layout_width="138dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView22" android:textColor="#333"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="322dp"
                        android:layout_height="32dp"
                        android:background="#f2f2f2"
                >
                    <TextView
                            android:text="Aircraft:Boeing 737-800"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView33" android:textColor="#333"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="322dp"
                        android:layout_height="32dp"
                        android:background="#f2f2f2"
                >
                    <TextView
                            android:text="Statues:Comfirmed"
                            android:layout_width="168dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" android:id="@+id/textView7" android:textColor="#333"
                            android:bufferType="normal"/>
                    <TextView
                            android:text="Detail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/textView9"
                            android:gravity="center" android:textStyle="bold" android:textSize="18dp"
                            android:textColor="#396ca3"/>

                </LinearLayout>
            </LinearLayout>
            <Button android:layout_width="200dp" android:layout_height="50dp" android:id="@+id/btnCancel"
                    android:layout_marginTop="50dp" android:layout_marginBottom="50dp" android:text="Cancel/confirmed"
                    android:background="@drawable/buttonblue"/>
            <Button android:layout_width="200dp"
                    android:layout_marginTop="10dp"
                    android:text="Back"
                    android:id="@+id/back1"
                    android:background="@drawable/buttonyellow"
                    android:layout_height="50dp"/>
            <TextView android:layout_width="100dp" android:layout_height="200dp"/>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>